@{
    ViewData["Title"] = "Numbers 1...N";
}

@if (ViewBag.Count > 0)
{
    <h2>Numbers to @ViewBag.Count</h2>
    <ul class ="list-group">
        @for (int i = 1; i <= ViewBag.Count; i++)
        {
            <li class="list-group-item">@i</li>
        }
    </ul>
}
else
{
    <h2>Numbers to N</h2>
}

<form asp-controller="Home" asp-action="NumbersToN" method="post">
    <div class="row">
        <div class="col-2">
            <input class ="form-control "type="number" min ="0" step ="1" name ="count"/>
        </div>
        <div class="col-2">
            <button class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>
